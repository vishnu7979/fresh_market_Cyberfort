<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Dashboard</title>
    <style>
        body {
            font-family: 'Georgia', serif;
            background-color: #f4f1e9;
            color: #333;
            margin: 0;
            padding: 20px;
        }
        h1 {
            text-align: center;
            color: #4a4a4a;
            margin-bottom: 30px;
        }
        #createButton {
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            color: #fff;
            background-color: #6b8e23;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            margin-bottom: 20px;
        }
        #createButton:hover {
            background-color: #556b2f;
        }
        .search-container {
            text-align: center;
            margin-bottom: 30px;
        }
        .search-input {
            padding: 10px;
            font-size: 16px;
            width: 300px;
            border: 2px solid #ccc;
            border-radius: 5px;
        }
        .search-button {
            padding: 10px 20px;
            font-size: 16px;
            color: #fff;
            background-color: #8b4513;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-left: 10px;
        }
        .search-button:hover {
            background-color: #5a2d0c;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 30px;
        }
        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #d2b48c;
        }
        tr:hover {
            background-color: #f5f5dc;
        }
        .main-image img {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 5px;
        }
        .action-buttons {
            display: flex;
            gap: 10px;
        }
        .edit-button {
            padding: 5px 10px;
            font-size: 14px;
            color: #fff;
            background-color: #32cd32;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .edit-button:hover {
            background-color: #228b22;
        }
        .delete-button {
            padding: 5px 10px;
            font-size: 14px;
            color: #fff;
            background-color: #ff4500;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .delete-button:hover {
            background-color: #b22222;
        }
    </style>
</head>
<body>
    <h1>Product Dashboard</h1>
    <div class="search-container">
        <form action="/admin/product_dashboard" method="GET">
            <input type="text" name="search" id="search-input" class="search-input" placeholder="Search...">
            <button type="submit" class="search-button">Search</button>
        </form>
    </div>
    <a href="/admin/create_new_product" id="createButton">Add New Product</a>
    <h3>Search Results for: <%= locals.searchQuery %></h3>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(product => { %>
                <tr>
                    <td><%= product.name %></td>
                    <td><%= product.price %></td>
                    <td><%= product.category %></td>
                    <td>
                        <div class="main-image text-center">
                            <img src="/uploads/<%= product.image %>" alt="<%= product.name %>">
                        </div>
                    </td>
                    <td>
                        <div class="action-buttons">
                            <a href="/admin/editproduct/<%= product.id %>" class="edit-button">Edit</a>
                            <a href="/admin/deleteproduct/<%= product.id %>" class="delete-button">Delete</a>
                        </div>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
