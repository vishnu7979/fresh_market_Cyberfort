    <link rel="stylesheet" href="signupcss/style.css" />
</head>

<body>
    <div class="container">
        <form class="mx-1 mx-md-4" method="post" novalidate>
            <h2>Sign Up form</h2>
            <div class="input-field">
              <input type="text" id="form3Example1c" class="form-control" name="name" placeholder="Enter your Name" required/>
            </div>

            <div class="input-field">
              <input type="email" id="form3Example3c" class="form-control" name="email" placeholder="Enter your Email" required/>
            </div>

            <div class="input-field">
              <input type="password" id="form3Example4c" class="form-control" name="password" placeholder="Enter your Password" required/>
            </div>



            <div class="forget">
                <label for="Save-login">
                    <input type="checkbox" id="Save-login" />
                    <p>Save login information</p>
                </label>
                <a href="#">Forgot password?</a>
            </div>
            <button type="submit"><a href="/signup">Register</a></button>
            <div class="Create-account">
                <p>Already have an account? <a href="/login">Create account</a></p>
            </div>
        </form>
    </div>
</body>

